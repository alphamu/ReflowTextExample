<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActivityOne" parent="AppTheme">
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="ActivityTwo" parent="AppTheme">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/reflow_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/reflow_exit</item>
    </style>

</resources>
